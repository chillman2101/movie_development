<h1>Add Movie</h1>
  <%= form_with model: @film, url: add_movie_path do |f| %>
    <p>
    <%= f.label 'title' %><br>
    <%= f.text_field :title %>
    </p>
    <p>
    <%= f.label 'release_date' %><br>
    <%= f.text_field :release_date %>
    </p>
    <p>
    <%= f.label 'rating' %><br>
    <%= f.text_field :rating %>
    </p>
    <p>
    <%= f.label 'genre' %><br>
    <% if @genre.present? %>
        <%= f.select(:genre_id, options_for_select(@genre.collect { |c| [c.name, c.id] }, {:selected => @genre.ids})) %>
    <% else %>
        <%= f.select(:genre_id, options_for_select(@genre.collect { |c| [c.name, c.id] })) %>
    <% end %>
    </p>
    <p>
    <%= f.label 'producer' %><br>
    <% if @producer.present? %>
        <%= f.select(:producer_id, options_for_select(@producer.collect { |c| [c.name, c.id] }, {:selected => @producer.ids})) %>
    <% else %>
        <%= f.select(:producer_id, options_for_select(@producer.collect { |c| [c.name, c.id] })) %>
    <% end %>
    </p>
    <p>
    <%= f.submit 'Add Movie' %>
    </p>

  <% end %>