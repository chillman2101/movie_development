<h1>Add Genre</h1>
  <%= form_with model: @genre, url: add_genre_path do |f| %>
    <p>
    <%= f.label 'name' %><br>
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label 'description' %><br>
    <%= f.text_field :description %>
    </p>
    <p>
    <%= f.submit 'Add Genre' %>
    </p>

  <% end %>