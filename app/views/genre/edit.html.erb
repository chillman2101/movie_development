<h1>Edit Genre</h1>
  <%= form_with model: @genre, url: update_genre_path do |f| %>
    <p>
    <%= f.label 'name' %><br>
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label 'description' %><br>
    <%= f.text_field :description %>
    </p>
    <p>
    <p>
    <%= f.submit 'Edit Genre' %>
    </p>
  <% end %>